<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Nguyễn Quý Mạnh</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.8.1/font/bootstrap-icons.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css">
</head>
<body>

    <!-- Header -->
    <header class="d-flex align-items-center p-3 bg-light border-bottom">
        <div class="me-3">
            <img src="@Url.Content("~/Images/Main.jpg")" alt="Nguyễn Quý Mạnh" class="rounded-circle" width="80" height="80">
        </div>
        <div>
            <h1 class="h4 mb-1">Nguyễn Quý Mạnh</h1>
            <p class="text-muted mb-0">162001518</p>
        </div>
    </header>

    <div class="container my-4">
        <h2>@ViewBag.SubjectTitle</h2>
        <div class="row">
            <!-- Menu -->
            <nav class="col-md-3">
                <ul class="list-group">
                    <li class="list-group-item">
                        <a href="@Url.Action("Index", "Home")" class="text-decoration-none text-dark">
                            <i class="bi bi-house-door"></i> Trang chủ
                        </a>
                    </li>
                    <li class="list-group-item">
                        <a href="@Url.Action("Index", "ThanhViens")" class="text-decoration-none text-dark">
                            <i class="bi bi-people"></i> Thành Viên
                        </a>
                    </li>
                    <li class="list-group-item">
                        <a href="@Url.Action("BaiTap", "Home")" class="text-decoration-none text-dark">
                            <i class="bi bi-journal"></i> Bài tập
                        </a>
                    </li>
                </ul>
            </nav>

            <!-- Nội Dung chính -->
            <div class="col-md-9">
                <article>
                    @RenderBody()
                </article>
            </div>
        </div>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
